{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-case-declarations": "error",
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error"
  },
  "globals": {
    "chrome": "readonly",
    "browser": "readonly",
    "browserAPI": "readonly",
    "EverTrackAPI": "readonly", 
    "EverTrackSettings": "readonly",
    "EverTrackTime": "readonly",
    "EverTrackDOM": "readonly"
  }
}