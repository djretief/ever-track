{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-console": "off",
    "no-undef": "off", 
    "no-unused-vars": "warn",
    "indent": "off",
    "max-len": "off",
    "prettier/prettier": "off",
    "no-case-declarations": "off"
  },
  "globals": {
    "chrome": "readonly",
    "browser": "readonly",
    "browserAPI": "readonly",
    "EverTrackAPI": "readonly", 
    "EverTrackSettings": "readonly",
    "EverTrackTime": "readonly",
    "EverTrackDOM": "readonly"
  }
}